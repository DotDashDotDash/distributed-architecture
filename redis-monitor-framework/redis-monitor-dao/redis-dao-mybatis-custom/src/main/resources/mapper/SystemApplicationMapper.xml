<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="org.codwh.redis.custom.dao.ISystemApplicationDao">
    <resultMap id="systemApplicationMap" type="org.codwh.redis.custom.model.system.SystemApplication">
        <result property="id" column="id"/>
        <result property="applicationName" column="application_name"/>
        <result property="applicationHost" column="application_host"/>
        <result property="jmxHost" column="jmx_host"/>
        <result property="jmxPort" column="jmx_port"/>
        <result property="jmxUserName" column="jmx_user_name"/>
        <result property="jmxPassword" column="jmx_pass_word"/>
        <result property="createTime" column="create_time"/>
        <result property="createUserName" column="create_user_name"/>
        <result property="version" column="version"/>
        <result property="applicationStatus" column="status"/>
        <result property="jmxStatus" column="jmx_status"/>
    </resultMap>

    <insert id="insert" parameterType="org.codwh.redis.custom.model.system.SystemApplication">
        <selectKey keyProperty="id" resultType="Integer" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO system_application (
        <trim suffixOverrides=",">
            id,
            application_name,
            application_host,
            jmx_host,
            jmx_port,
            jmx_user_name,
            jmx_pass_word,
            create_time,
            create_user_name,
            version,
            status,
            jmx_status
        </trim>
        )VALUES (
        <trim suffixOverrides=",">
            #{id},
            #{applicationName},
            #{applicationHost},
            #{jmxHost},
            #{jmxPort},
            #{jmxUserName},
            #{jmxPassword},
            #{createTime},
            #{createUserName},
            #{version},
            #{applicationStatus},
            #{jmxStatus}
        </trim>
        )
    </insert>

    <update id="updateById" parameterType="org.codwh.redis.custom.model.system.SystemApplication">
        UPDATE system_application
        <trim prefix="SET" suffixOverrides=",">
            <if test="id != null">id = #{id}</if>
            <if test="applicationName != null">application_name = #{applicationName}</if>
            <if test="applicationHost != null">application_host = #{applicationHost}</if>
            <if test="jmxHost != null">jmx_host = #{jmxHost}</if>
            <if test="jmxPort != null">jmx_port = #{jmxPort}</if>
            <if test="jmxUserName != null">jmx_user_name = #{jmxUserName}</if>
            <if test="jmxPassword != null">jmx_pass_word = #{jmxPassword}</if>
            <if test="createTime != null">create_time = #{createTime}</if>
            <if test="createUserName != null">create_user_name = #{createUserName}</if>
            <if test="version != null">version = #{version}</if>
            <if test="applicationStatus != null">status = #{applicationStatus}</if>
            <if test="jmxStatus != null">jmx_status = #{jmxStatus}</if>
        </trim>
        WHERE id = #{id}
    </update>

    <update id="updateVersionByIdAndVersion" parameterType="org.codwh.redis.custom.model.system.SystemApplication">
        UPDATE system_application
        SET version    = #{version} + 1,
            status     = #{applicationStatus},
            jmx_status = #{jmxStatus}
        WHERE id = #{id}
          AND version = #{version}
    </update>

    <delete id="deleteById" parameterType="Integer">
        DELETE
        FROM system_application
        WHERE id = #{id}
    </delete>

    <select id="getById" parameterType="Integer" resultMap="systemApplicationMap">
        SELECT *
        FROM system_application
        WHERE id = #{id}
    </select>

    <select id="getListByCriteria" resultMap="systemApplicationMap"
            parameterType="org.codwh.redis.custom.model.system.SystemApplication">
        SELECT * FROM system_application
        <include refid="select_where_clause"/>
        ORDER BY id DESC
    </select>

    <select id="getListByStatus" resultMap="systemApplicationMap" parameterType="Integer">
        SELECT *
        FROM system_application
        WHERE status = #{status}
        ORDER BY id DESC
        LIMIT 0, 20
    </select>

    <sql id="select_where_clause">
        <trim prefix="where" prefixOverrides="AND|OR">
            <if test="id != null">id = #{id}</if>
            <if test="applicationName != null">application_name = #{applicationName}</if>
            <if test="applicationHost != null">application_host = #{applicationHost}</if>
            <if test="jmxHost != null">jmx_host = #{jmxHost}</if>
            <if test="jmxPort != null">jmx_port = #{jmxPort}</if>
            <if test="jmxUserName != null">jmx_user_name = #{jmxUserName}</if>
            <if test="jmxPassword != null">jmx_pass_word = #{jmxPassword}</if>
            <if test="createTime != null">create_time = #{createTime}</if>
            <if test="createUserName != null">create_user_name = #{createUserName}</if>
            <if test="version != null">version = #{version}</if>
            <if test="applicationStatus != null">status = #{applicationStatus}</if>
            <if test="jmxStatus != null">jmx_status = #{jmxStatus}</if>
        </trim>
    </sql>

    <select id="queryPageList" resultMap="systemApplicationMap">
        SELECT * FROM system_application
        <include refid="page_where_clause"/>
    </select>

    <select id="count" resultType="int" parameterType="org.codwh.redis.custom.model.system.SystemApplication">
        SELECT COUNT(*) FROM system_application
        <include refid="page_where_clause"/>
    </select>

    <sql id="page_where_clause">
        <trim prefix="where" prefixOverrides="AND|OR">
            <if test="queryObject.id != null">AND id = #{queryObject.id}</if>
            <if test="queryObject.applicationName != null">AND application_name = #{queryObject.applicationName}</if>
            <if test="queryObject.applicationHost != null">AND application_host = #{queryObject.applicationHost}</if>
            <if test="queryObject.applicationPort != null">AND application_port = #{queryObject.applicationPort}</if>
            <if test="queryObject.jmxHost != null">AND jmx_host = #{queryObject.jmxHost}</if>
            <if test="queryObject.jmxPort != null">AND jmx_port = #{queryObject.jmxPort}</if>
            <if test="queryObject.jmxUserName != null">AND jmx_user_name = #{queryObject.jmxUserName}</if>
            <if test="queryObject.jmxPassWord != null">AND jmx_pass_word = #{queryObject.jmxPassWord}</if>
            <if test="queryObject.createTime != null">AND create_time = #{queryObject.createTime}</if>
            <if test="queryObject.createUserName != null">AND create_user_name = #{queryObject.createUserName}</if>
            <if test="queryObject.version != null">AND version = #{queryObject.version}</if>
            <if test="queryObject.applicationStatus != null">AND status = #{queryObject.applicationStatus}</if>
            <if test="queryObject.jmxStatus != null">AND jmx_status = #{queryObject.jmxStatus}</if>
        </trim>
    </sql>
</mapper>