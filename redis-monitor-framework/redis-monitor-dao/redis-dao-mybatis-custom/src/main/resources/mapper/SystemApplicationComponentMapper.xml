<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="org.codwh.redis.custom.dao.ISystemApplicationComponentDao">
    <resultMap id="SystemApplicationComponentMap" type="org.codwh.redis.custom.model.system.SystemApplicationComponent">
        <result property="id" column="id"/>
        <result property="applicationId" column="application_id"/>
        <result property="componentId" column="component_id"/>
    </resultMap>

    <insert id="insert" parameterType="org.codwh.redis.custom.model.system.SystemApplicationComponent">
        <selectKey keyProperty="id" resultType="Integer" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO system_application_component (
        <trim suffixOverrides=",">
            id,
            application_id,
            component_id,
        </trim>
        )VALUES(
        <trim suffixOverrides=",">
            #{id},
            #{applicationId},
            #{componentId},
        </trim>
        )
    </insert>

    <update id="updateById" parameterType="org.codwh.redis.custom.model.system.SystemApplicationComponent">
        update system_application_component
        <trim prefix="SET" suffixOverrides=",">
            <if test="id != null">id = #{id},</if>
            <if test="applicationId != null">application_id = #{applicationId},</if>
            <if test="componentId != null">component_id = #{componentId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        delete
        from system_application_component
        where id = #{id}
    </delete>

    <select id="getById" parameterType="int" resultMap="SystemApplicationComponentMap">
        select *
        from system_application_component
        where id = #{id}
    </select>

    <select id="getListByCriteria" resultMap="SystemApplicationComponentMap"
            parameterType="org.codwh.redis.custom.model.system.SystemApplicationComponent">
        select * from system_application_component
        <include refid="select_where_clause"/>
        order by id desc
    </select>

    <sql id="select_where_clause">
        <trim prefix="where" prefixOverrides="AND|OR">
            <if test="id != null">AND id = #{id}</if>
            <if test="applicationId != null">AND application_id = #{applicationId}</if>
            <if test="componentId != null">AND component_id = #{componentId}</if>
        </trim>
    </sql>

    <select id="queryPageList" resultMap="SystemApplicationComponentMap">
        select * from system_application_component
        <include refid="page_where_clause"/>
        order by id desc
        <if test="page!=null">
            LIMIT #{page.pageSize} OFFSET #{page.begin}
        </if>
    </select>

    <select id="count" resultType="int" parameterType="org.codwh.redis.custom.model.system.SystemApplicationComponent">
        select count(*) from system_application_component
        <include refid="page_where_clause"/>
    </select>

    <sql id="page_where_clause">
        <trim prefix="where" prefixOverrides="AND|OR">
            <if test="queryObject.id != null">AND id = #{queryObject.id}</if>
            <if test="queryObject.applicationId != null">AND application_id = #{queryObject.applicationId}</if>
            <if test="queryObject.componentId != null">AND component_id = #{queryObject.componentId}</if>
        </trim>
    </sql>
    <!--extension script-->
</mapper>