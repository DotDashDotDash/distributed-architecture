<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="org.codwh.redis.custom.dao.ISystemApplicationMonitorDao">
    <resultMap id="systemApplicationMonitorMap" type="org.codwh.redis.custom.model.system.SystemApplicationMonitor">
        <result property="id" column="id"/>
        <result property="monitorModule" column="monitor_moudle"/>
        <result property="monitorApplicationName" column="monitor_application_name"/>
        <result property="monitorStatus" column="monitor_status"/>
        <result property="monitorHost" column="monitor_host"/>
        <result property="monitorPort" column="monitor_port"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <insert id="insert" parameterType="org.codwh.redis.custom.model.system.SystemApplicationMonitor">
        <selectKey keyProperty="id" resultType="Integer" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO system_application_monitor (
        <trim suffixOverrides=",">
            id,
            monitor_moudle,
            monitor_application_name,
            monitor_status,
            monitor_host,
            monitor_port,
            create_time,
        </trim>
        )VALUES(
        <trim suffixOverrides=",">
            #{id},
            #{monitorModule},
            #{monitorApplicationName},
            #{monitorStatus},
            #{monitorHost},
            #{monitorPort},
            #{createTime},
        </trim>
        )
    </insert>

    <update id="updateById" parameterType="org.codwh.redis.custom.model.system.SystemApplicationMonitor">
        update system_application_monitor
        <trim prefix="SET" suffixOverrides=",">
            <if test="id != null">id = #{id},</if>
            <if test="monitorModule != null">monitor_moudle = #{monitorMoudle},</if>
            <if test="monitorApplicationName != null">monitor_application_name = #{monitorApplicationName},</if>
            <if test="monitorStatus != null">monitor_status = #{monitorStatus},</if>
            <if test="monitorHost != null">monitor_host = #{monitorHost},</if>
            <if test="monitorPort != null">monitor_port = #{monitorPort},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        delete
        from system_application_monitor
        where id = #{id}
    </delete>

    <select id="getById" parameterType="int" resultMap="systemApplicationMonitorMap">
        select *
        from system_application_monitor
        where id = #{id}
    </select>

    <select id="getListByCriteria" resultMap="SystemApplicationMonitorMap"
            parameterType="org.codwh.redis.custom.model.system.SystemApplicationMonitor">
        select * from system_application_monitor
        <include refid="select_where_clause"/>
        order by id desc
    </select>

    <sql id="select_where_clause">
        <trim prefix="where" prefixOverrides="AND|OR">
            <if test="id != null">AND id = #{id}</if>
            <if test="monitorModule != null">AND monitor_moudle = #{monitorModule}</if>
            <if test="monitorApplicationName != null">AND monitor_application_name = #{monitorApplicationName}</if>
            <if test="monitorStatus != null">AND monitor_status = #{monitorStatus}</if>
            <if test="monitorHost != null">AND monitor_host = #{monitorHost}</if>
            <if test="monitorPort != null">AND monitor_port = #{monitorPort}</if>
            <if test="createTime != null">AND create_time = #{createTime}</if>
        </trim>
    </sql>

    <select id="queryPageList" resultMap="systemApplicationMonitorMap">
        select * from system_application_monitor
        <include refid="page_where_clause"/>
        order by id desc
        <if test="page!=null">
            LIMIT #{page.pageSize} OFFSET #{page.begin}
        </if>
    </select>

    <select id="count" resultType="int" parameterType="org.codwh.redis.custom.model.system.SystemApplicationMonitor">
        select count(*) from system_application_monitor
        <include refid="page_where_clause"/>
    </select>

    <sql id="page_where_clause">
        <trim prefix="where" prefixOverrides="AND|OR">
            <if test="queryObject.id != null">AND id = #{queryObject.id}</if>
            <if test="queryObject.monitorModule != null">AND monitor_moudle = #{queryObject.monitorModule}</if>
            <if test="queryObject.monitorApplicationName != null">AND monitor_application_name =
                #{queryObject.monitorApplicationName}
            </if>
            <if test="queryObject.monitorStatus != null">AND monitor_status = #{queryObject.monitorStatus}</if>
            <if test="queryObject.monitorHost != null">AND monitor_host = #{queryObject.monitorHost}</if>
            <if test="queryObject.monitorPort != null">AND monitor_port = #{queryObject.monitorPort}</if>
            <if test="queryObject.createTime != null">AND create_time = #{queryObject.createTime}</if>
        </trim>
    </sql>
</mapper>